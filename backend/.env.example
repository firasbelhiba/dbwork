# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/dar-pm-db?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key
JWT_REFRESH_EXPIRATION=30d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=10485760

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Email Configuration (NodeMailer)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@darblockchain.com
MAIL_FROM_NAME=Dar Blockchain PM

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# WebSocket Configuration
WS_PORT=3001

# Google Calendar / Meet Integration
# Get these from: https://console.cloud.google.com/apis/credentials
# 1. Create OAuth 2.0 Client ID (Web application)
# 2. Add authorized redirect URI: http://localhost:3001/google-calendar/callback
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3001/google-calendar/callback

# Chat Message Encryption
# Generate a secure key using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# This key is used to encrypt chat messages for privacy (AES-256-GCM)
CHAT_ENCRYPTION_KEY=your-64-character-hex-key-here-generate-with-command-above
